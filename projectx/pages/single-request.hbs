<fieldset>
  <legend>Request overview</legend>
  <div class="table__wrapper" style="margin-bottom: 20px">
    <table>
      <thead>
        <tr>
          <th>Status</th>
          <th>Requester</th>
          <th>Department</th>
          <th>Date sent</th>
          <th>Assigned to</th>
        </tr>
